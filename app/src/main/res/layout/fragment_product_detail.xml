<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonsLayout"
        android:orientation="vertical">

        <br.com.felix.imagezoom.ImageZoom
            android:id="@+id/image"
            android:adjustViewBounds="true"
            android:src="@drawable/shoe_sample"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <com.adroitandroid.chipcloud.ChipCloud
            android:id="@+id/chip_cloud"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp">

        </com.adroitandroid.chipcloud.ChipCloud>

        <FrameLayout
            android:id="@+id/sub_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_gradient"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_extra_round"
            android:drawableRight="@drawable/sharebtn"
            android:paddingRight="10dp"
            android:text="Share this" />

        <Button
            android:id="@+id/callBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_round"
            android:drawableRight="@drawable/phonebtn"
            android:paddingRight="10dp"
            android:text="Contact Seller" />
    </LinearLayout>

</RelativeLayout>